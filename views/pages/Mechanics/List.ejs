<%- include('../../fragment/header.ejs') %>
<main>
    <h2>Mechanics</h2>
    <table class="table-list">
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Salary</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
        <tbody>
        <% for (let mechanic of mechanics) { %>
            <tr>
                <td><%= mechanic.firstName %></td>
                <td><%= mechanic.lastName %></td>
                <td><%= mechanic.salary %></td>
                <td><%= mechanic.phone %></td>
                <td>
                    <ul class="list-actions">
                        <li>
                            <a href="/mechanics/details/<%= mechanic._id%>"
                               class="list-actions-button-details">Details</a>
                        </li>
                        <li>
                            <a href="/mechanics/edit/<%= mechanic._id%>"
                               class="list-actions-button-edit">Edit</a>
                        </li>
                        <li>
                            <a href="/mechanics/delete/<%= mechanic._id%>" class="list-actions-button-delete">Delete</a>
                        </li>
                    </ul>
                </td>

            </tr>
        <% } %>
        </tbody>
    </table>
    <p><a href="/mechanics/add" class="button-add">Add new mechanic</a></p>
</main>
<%- include('../../fragment/footer.ejs') %>